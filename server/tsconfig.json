 {
    "compilerOptions": {
      "types": ["node"],
      "moduleResolution": "node",
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}